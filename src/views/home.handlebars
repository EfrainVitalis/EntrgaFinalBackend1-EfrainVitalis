<h1>ELIGE TU AUTO A ESCALA</h1>

<div class="contenedorProductos">

 <div class="contenedorProductos">    
    {{#each products}}
    <div class="card">
        <p><h2>producto</h2>{{this.title}}</p>
        <p>{{this.description}}</p>        
        <p>{{this.price}}</p>
        <p>{{this.img}}</p>
        <p>{{this.code}}</p>
        <p>{{this.stock}}</p>        
        <button> Agregar al Carrito</button>

    </div> 
    {{/each}}
</div> 
{{#if hasPrevPage}}
    <a href="/products?page={{prevPage}}"> Anterior </a>
{{/if}}

{{#if hasNextPage}}
    <a href="/products?page={{nextPage}}"> Siguiente </a>
{{/if}}

<p> {{currentPage}} de {{totalPages}} </p>
